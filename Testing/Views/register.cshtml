@model RegisterViewModel

<form asp-action="Register" method="post">
    <div>
        <label for="FirstName">First Name</label>
        <input type="text" asp-for="FirstName" required />
    </div>
    <div>
        <label for="LastName">Last Name</label>
        <input type="text" asp-for="LastName" required />
    </div>
    <div>
        <label for="Email">Email</label>
        <input type="email" asp-for="Email" required />
    </div>
    <div>
        <label for="Password">Password</label>
        <input type="password" asp-for="Password" required />
    </div>
    <div>
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" asp-for="ConfirmPassword" required />
    </div>
    <button type="submit">Register</button>
    <a asp-controller="Account" asp-action="GoogleLogin">Register with Google</a>
</form>
